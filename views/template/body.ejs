<body>
    <script>
        function makeLogin(){
                credenciales = {};
                credenciales.Matricula = document.getElementById("textLogin").value;
                credenciales.Contraseña = document.getElementById("textPassword").value;
                axios.post('http://localhost:3000/Login',credenciales)
                .then((response)=>{
                    console.log(response.data.token);
                    sessionStorage.setItem("tToken", response.data.token);
                    sessionStorage.setItem("matricula", credenciales.Matricula);
                    window.location.href = "http://localhost:3000/menu";
                })
                .catch((error)=>{
                    alert("error");
                    console.log(error);
                });
            }
    </script>
    <div>
    
        <img id="imagenFondo" src="img\fondoinicio.jpg" alt="">
        <div id="fondoNegro"></div>
        <div class="form">
            <form>
                <h1><span>Bienvenido</span> Usuario </h1>
                <input type="email" id="textLogin"  class="form-control" placeholder="Usuario"/>
                <input type="password" id="textPassword" class="form-control" placeholder="Contraseña"/>
                <button type="button" class="btn btn-primary btn-block mb-4" onclick="makeLogin()">Entrar</button>
                <h6>Punto De Venta</h6>         
                </div>
              </form>
        </div>
        
    </div>
</body>