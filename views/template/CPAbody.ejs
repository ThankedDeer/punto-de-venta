    function consultaInventarioCategoria() {
      
      var numeroc = document.getElementById('idConsulta2').value;

    axios.get("http://localhost:3000/consultaCategoria/" + numeroc )
              .then((response)=>{
                
                const data = response.data;
                const tabla = document.getElementById('tablaInventario');
                tabla.innerHTML="";
                data.forEach(venta => {
               
                size = tabla.length;
                row = tabla.insertRow(size);

                cell1 = row.insertCell(0);
                cell2 = row.insertCell(1);
                cell3 = row.insertCell(2);
                cell4 = row.insertCell(3);
                
                
                cell1.innerHTML = venta.idProducto;
                cell2.innerHTML = venta.idCategoria;
                cell3.innerHTML = venta.Nombre;
                cell4.innerHTML = venta.Precio;

                
            });
              })
              .catch((error)=>{
                console.log(error);
              });

      
    }

